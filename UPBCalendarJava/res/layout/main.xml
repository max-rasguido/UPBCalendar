<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:p1="http://schemas.android.com/apk/res/android"
    p1:minWidth="25dp"
    p1:minHeight="25dp"
    p1:layout_width="fill_parent"
    p1:layout_height="fill_parent"
    p1:id="@+id/relativeLayout1"
    p1:background="@android:color/white">
    <RelativeLayout
        p1:minWidth="25dp"
        p1:minHeight="25dp"
        p1:layout_width="fill_parent"
        p1:layout_height="wrap_content"
        p1:id="@+id/relativeLayout2">

        <ImageView
            p1:id="@+id/UPBLogo"
            p1:layout_width="wrap_content"
            p1:layout_height="wrap_content"
            p1:layout_alignParentLeft="true"
            p1:layout_margin="2dp"
            p1:contentDescription="@string/app_name"
            p1:src="@drawable/upb" />

        <TextView
            p1:id="@+id/AppTitle"
            p1:layout_width="wrap_content"
            p1:layout_height="wrap_content"
            p1:layout_below="@id/UPBLogo"
            p1:layout_centerHorizontal="true"
            p1:text="@string/app_name"
            p1:textAppearance="?android:attr/textAppearanceLarge"
            p1:textColor="#3B3477" />

        <ImageView
            p1:id="@+id/ISCLogo"
            p1:layout_width="wrap_content"
            p1:layout_height="wrap_content"
            p1:layout_above="@id/AppTitle"
            p1:layout_alignParentRight="true"
            p1:layout_marginRight="-15dp"
            p1:contentDescription="@string/app_name"
            p1:src="@drawable/isc" />

    </RelativeLayout>
    <LinearLayout
        p1:orientation="vertical"
        p1:minWidth="25dp"
        p1:minHeight="25dp"
        p1:layout_width="match_parent"
        p1:layout_height="wrap_content"
        p1:id="@+id/BottomBar"
        p1:layout_alignParentBottom="true"
        p1:background="#3B3477"
        p1:gravity="center_horizontal">

        <TextView
            p1:id="@+id/textView1"
            p1:layout_width="wrap_content"
            p1:layout_height="wrap_content"
            p1:text="@string/inicio_de_clases"
            p1:textAppearance="?android:attr/textAppearanceMedium"
            p1:textColor="@android:color/white" />

    </LinearLayout>
    <ListView
        p1:minWidth="25dp"
        p1:minHeight="25dp"
        p1:layout_below="@id/relativeLayout2"
        p1:layout_above="@id/BottomBar"
        p1:layout_width="fill_parent"
        p1:layout_height="fill_parent"
        p1:id="@+id/EventList" />
</RelativeLayout>